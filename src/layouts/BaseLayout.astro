---
import Footer from '../components/Footer.astro'
import Header from '../components/Header.astro'
import Poporing from '../components/Poporing.astro'

const { title } = Astro.props
---

<html lang='en'>
  <head>
    <meta charset='utf-8' />

    <!-- favicon related -->
    <link rel='icon' type='image/svg+xml' href='/favicon.ico' />
    <link rel='apple-touch-icon' sizes='180x180' href='/apple-touch-icon.png' />
    <link rel='icon' type='image/png' sizes='32x32' href='/favicon-32x32.png' />
    <link rel='icon' type='image/png' sizes='16x16' href='/favicon-16x16.png' />
    <link rel='manifest' href='/site.webmanifest' />
    <link rel='mask-icon' href='/safari-pinned-tab.svg' color='#5bbad5' />
    <meta name='msapplication-TileColor' content='#b91d47' />
    <meta name='theme-color' content='#ffffff' />

    <meta name='viewport' content='width=device-width, initial-scale=1' />
    <meta name='generator' content={Astro.generator} />
    <title>tannineo.github.io{title ? ' - title' : ''}</title>
  </head>
  <body class='scroll-smooth'>
    <div
      class='relative w-full min-h-screen bg-sumi text-mizu'
      u-flex='~ col items-center justify-center'
    >
      <Header />

      <div class='w-full max-w-screen-md mx-auto p-4' u-flex='1'>
        <slot />
      </div>

      <Footer />

      <Poporing />
    </div>
  </body>
</html>
